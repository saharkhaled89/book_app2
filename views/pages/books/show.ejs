<!DOCTYPE html>
<html>

<head>
    <title>Books</title>
    <%- include('../../layout/head') %> 
    <!-- <link rel="stylesheet" href="styles/base.css">
  <link rel="stylesheet" href="styles/modules.css">
  <link rel="stylesheet" href="styles/layout.css"> -->
  
</head>

<body>
    <header>
        <h1> Best Books !</h1>
    </header>
    <main>
        <h2> Search Results </h2>
        <% books.forEach((book)=> { %>
            <div class="thebookdetails">
                <% if(book){ %>
                    <p> ** Book Details ** </p><br>
                    
                    <img class="bookimage" src=<%=book.image %>><br>
                    
  
                    <p class="booktitle">Title <%= book.title %></p>
                <p class="bookauthor">Author : <%= book.author %></p>
                <textarea  class="bookdescp">Book Description :<%= book.des %></textarea> <br>
                <p class="bookauthor">Shelf : <%= book.bookshelf %></p>
                <p class="bookauthor">ISBN : <%= book.isbn %></p>
  
                <form action ='/show' method="POST" class="formBook">
                  <input type="hidden" name="image" value="<%= book.image%>">
                  <input type="hidden" name="title" value="<%= book.title%>">
                  <input type="hidden" name="author" value="<%= book.author%>">
                  <input type="hidden" name="des" value="<%= book.des%>">
                  <input type="hidden" name="isbn" value="<%= book.isbn%>">
                  <input type="hidden" name="shelf" value="<%= book.bookshelf%>">
              
                  <button class="selectbutton" type="submit"> Show Details </button>
              </form>
  
                <% }else{
                    %>
                    <p class="booktitle"> No Book is selected.</p>
                <% } %>
            </div>
    </main>

    <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <script src="../../public/js/app.js"></script>

    <footer>
        <!-- <%- include('../../layout/footer') %>  -->
    </footer>

</body>

</html>
